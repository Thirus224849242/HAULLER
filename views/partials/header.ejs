
  <!-- HEADER -->
  <header class="main-header">
    <div class="container-fluid d-flex justify-content-between align-items-center px-4 py-3">
      <div class="d-flex align-items-center gap-3">
        <img src="/media/logo.png" style="width: 60px; height: 60px; object-fit: contain;" alt="Hauller Logo">
        <h2 class="mb-0 text-white fw-bold">Hauller</h2>
      </div>

      <div class="d-flex align-items-center gap-4">
        <button class="btn btn-light position-relative rounded-circle shadow-sm" onclick="toggleNotificationPanel()" style="width: 44px; height: 44px;">
          <i class="fas fa-bell"></i>
          <span id="notif-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            <%= notificationCount %>
          </span>
        </button>
<!-- CHAT Icon -->
<button class="btn btn-light position-relative rounded-circle shadow-sm" onclick="window.location.href='/member/chat'" style="width: 44px; height: 44px;">
  <i class="fas fa-comments"></i>
</button>

        <div class="position-relative">
          <button class="btn btn-light rounded-circle shadow-sm" onclick="toggleSettingsDropdown()" style="width: 42px; height: 42px;">
            <i class="fas fa-cog"></i>
          </button>
          <div id="settings-dropdown" class="dropdown-menu-settings bg-white shadow rounded p-3">
            <button class="btn btn-outline-primary w-100 d-flex align-items-center gap-2 mb-2" onclick="window.location.href = 'uacc';">
              <i class="fas fa-user-edit"></i> Update Account
            </button>
            <button class="btn btn-outline-danger w-100 d-flex align-items-center gap-2 mb-2" onclick="confirmDestroyAccount()">
              <i class="fas fa-user-times"></i> Destroy Account
            </button>
            <button class="btn btn-danger w-100 d-flex align-items-center gap-2" onclick="window.location.href = 'logout';">
              <i class="fas fa-sign-out-alt"></i> Logout
            </button>

          </div>
        </div>
<div class="d-flex align-items-center gap-2">
          <img src="<%= image || '/media/image.png' %>" 
               onerror="this.onerror=null; this.src='/media/default-user.png';"
               alt="User" 
               class="rounded-circle"
               style="width: 36px; height: 36px; object-fit: cover; border: 2px solid #e2e5ea;">
          <span class="text-white fw-semibold"><%= name %></span>
        </div>
        <audio id="notifSound" src="/media/notification.mp3" preload="auto"></audio>
      </div>
    </div>
  </header>
