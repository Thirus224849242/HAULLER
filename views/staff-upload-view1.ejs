<!DOCTYPE html>
<html>
<head>
    <style>
      .formdes {
    padding: 2%;
    width: 35%;
    margin-top: 4%;
    margin-left: 30%;
    border-radius: 20px;
    box-shadow: 0 0 1rem 0 rgba(0, 0, 0, .2); 
    background-color: rgba(255, 255, 255, .15);
    backdrop-filter: blur(5px);
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.formdes .form-control,
.formdes button {
    width: 100%;
}

        body {
            background: url('https://cdn.pixabay.com/photo/2019/04/26/07/14/store-4156934_1280.png');
            background-repeat: no-repeat;
            background-size: cover;
        }

        .alert {
            margin-bottom: 15px;
            color: red;
            font-weight: bold;
        }
    </style>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <title><%= title %></title>
</head>

<body>
    <form action="/member/updateimgpost" method="post" enctype="multipart/form-data" class="formdes" id="adForm">
        <h3 style="color: rgb(0, 0, 0); text-align: center;">Add Advertisement</h3>

      
        <div class="mb-3">
            <label>Ad ID</label>
            <input type="text" class="form-control" name="id" value="<%= id %>" readonly required>
        </div>

        <div class="mb-3">
            <label>Upload JPG File</label>
            <input type="file" class="form-control" id="adimage" name="adimage" accept=".jpg" required />
              <!-- Error message container -->
        <div id="clientError" class="alert" style="display:none;"></div>

        </div>

        <div>
            <button type="submit" class="btn btn-primary w-100" id="submitBtn">Add Advert</button>
        </div>
    </form>

    <script>
        const fileInput = document.getElementById('adimage');
        const errorDiv = document.getElementById('clientError');
        const submitBtn = document.getElementById('submitBtn');

        fileInput.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                const fileName = file.name.toLowerCase();
                const validExtension = fileName.endsWith('.jpg');

                if (!validExtension) {
                    errorDiv.textContent = "Only .jpg files are allowed.";
                    errorDiv.style.display = 'block';
                    submitBtn.disabled = true;
                } else {
                    errorDiv.style.display = 'none';
                    submitBtn.disabled = false;
                }
            }
        });
    </script>
</body>
</html>
