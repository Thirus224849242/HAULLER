<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Listings</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Open+Sans&display=swap" rel="stylesheet">
    
    <style>
        body {
            background: lightblue no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            font-family: 'Open Sans', sans-serif;
            padding: 20px;
            color: white;
        }

        .glass-card {
            background-color: white;
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            border: 1px solid rgba(255, 255, 255, 0.18);
            padding: 20px;
            margin-bottom: 20px;
            color: rgb(0, 0, 0);
        }

        .navbar {
            padding: 15px;
            border-radius: 15px;
            margin-bottom: 15px;
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
            margin-bottom: 0;
        }

        .primary-actions {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 30px 0;
        }

        .primary-action-btn {
            font-weight: bold;
            padding: 15px 30px;
            font-size: 1.2rem;
            transition: all 0.3s ease;
            min-width: 220px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .primary-action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.3);
        }

        .secondary-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .btn-action {
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .table {
            width: 100%;
            color: rgb(0, 0, 0);
        }

        .table th {
            font-weight: 700;
            background-color: lightslategray;
            border-bottom: 2px solid rgba(255, 255, 255, 0.3);
        }

        .table td {
            border-bottom: 1px solid rgba(182, 161, 161, 0.1);
            vertical-align: middle;
        }

        .table tr:hover td {
            background-color: rgba(0, 0, 0, 0.1);
        }

        a {
            color: #000000;
            text-decoration: indianred;
            transition: all 0.3s ease;
        }

        a:hover {
            color: #000000;
            text-decoration: underline;
        }

        .action-links a {
            display: inline-block;
            margin: 0 5px;
            padding: 3px 8px;
            border-radius: 5px;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .action-links a:hover {
            background-color: rgba(255, 255, 255, 0.2);
            text-decoration: none;
        }

        .page-title {
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>

<body>
    <nav class="navbar glass-card">
        <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
            <h1 style="color: rgb(0, 0, 0);">Welcome to hauller !</h1>
            <div class="secondary-actions">
                <button class="btn btn-info btn-action" onclick="window.location.href = 'dacc';">Destroy Account</button>
                <button class="btn btn-info btn-action" onclick="window.location.href = 'uacc';">Update Account</button>
                <button class="btn btn-danger btn-action" onclick="window.location.href = 'logout';">Logout</button>
            </div>
        </div>
    </nav>

    <div class="primary-actions">
        <button class="btn btn-success primary-action-btn" onclick="window.location.href = 'uploadview';">
            <i class="fas fa-plus-circle"></i> Create Ad
        </button>
        <button class="btn btn-warning primary-action-btn" onclick="window.location.href = 'dadd';">
            <i class="fas fa-trash-alt"></i> Destroy Ads
        </button>
    </div>

    <div class="glass-card">
        <div class="page-title">Choose your Ute</div>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Time Created</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if( data.length > 0 ) { 
                    data.forEach(function (data){ %>
                        <tr>
                            <td><%=data.name%></td>
                            <td><%=data.description%></td>
                            <td><% var dObj = new Date(data.timestamp)
                                var date = dObj.getDate()+"/"+(dObj.getMonth()+1)+"/"+dObj.getFullYear()+" "+ dObj.getHours()+":"+dObj.getMinutes()+":"+dObj.getSeconds() %>
                                <%=date%>
                            </td>
                            <td><%=data.price%></td>
                            <td><a href="/member/view/<%=data._id%>">view</a></td>
                            <td class="action-links">
                                <a href="/member/delete/<%=data._id%>">delete</a>
                                <a href="/member/updatedet/<%=data._id%>">update details</a>
                                <a href="/member/updateimg/<%=data._id%>">update image</a>
                            </td>
                        </tr>
                    <% });
                } %>
            </tbody>
        </table>
    </div>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>